# https://superuser.com/questions/39751/add-directory-to-path-if-its-not-already-there
pathadd() {
    if [ -d "$1" ] && [[ ":$PATH:" != *":$1:"* ]]; then
        PATH="${PATH:+"$PATH:"}$1"
    fi
}

psudo() {
    sudo -E LD_LIBRARY_PATH="$LD_LIBRARY_PATH" "$@"
}

